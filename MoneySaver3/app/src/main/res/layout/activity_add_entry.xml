<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="1"
    android:id="@+id/grid_layour"
    tools:context=".AddEntry">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Date:"
        android:textSize="22sp"
        android:layout_column="0"
        android:layout_row="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/date_picker"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="dd-mm-yy"
        android:textSize="22sp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toTopOf="@+id/date" />

    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Salary:"
        android:textSize="22sp"
        />

    <EditText
        android:id="@+id/salary_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="salary"
        android:textSize="22sp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/salary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toTopOf="@+id/salary" />



        <TextView
            android:id="@+id/Expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginStart="16dp"
            android:text="Expenses:"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/expenses_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="expenses"
            android:textSize="22sp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/Expenses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Expenses"
            app:layout_constraintTop_toTopOf="@+id/Expenses" />


</GridLayout>